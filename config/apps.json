{
    "app_data_dir": "data/apps",
    "max_apps_per_node": 10,
    "default_memory_limit": "512m",
    "default_cpu_limit": "1.0",
    "health_check_interval": 30,
    "scale_threshold_cpu": 80,
    "scale_threshold_memory": 85,
    "enable_auto_scaling": true,
    "docker_network": "voxacomms-apps",
    "registry_urls": ["docker.io", "ghcr.io"],
    "build_timeout": 600,
    "deployment_strategies": ["blue_green", "rolling", "canary"],
    "security": {
        "allow_privileged_containers": false,
        "enable_resource_limits": true,
        "max_build_time": 1800,
        "allowed_registries": ["docker.io", "ghcr.io", "local"]
    },
    "networking": {
        "expose_apps_externally": false,
        "internal_port_range": [10000, 20000],
        "enable_load_balancing": true
    },
    "storage": {
        "persistent_volumes": true,
        "max_storage_per_app": "10GB",
        "cleanup_stopped_apps": true,
        "retention_days": 7
    }
}
